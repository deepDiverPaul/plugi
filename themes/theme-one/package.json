{
  "name": "phpb-demo-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm-watch build",
    "build": "tsc && vite build"
  },
  "watch": {
    "build": {
      "patterns": [
        "src",
        "blocks",
        "layouts",
        "pages"
      ],
      "extensions": "ts,html,php",
      "quiet": false
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "daisyui": "^3.0.3",
    "npm-watch": "^0.11.0",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.6",
    "vite": "^4.3.9"
  },
  "dependencies": {
    "@types/alpinejs": "^3.7.2",
    "alpinejs": "^3.12.2"
  }
}
